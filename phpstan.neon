includes:
  - vendor/mglaman/phpstan-drupal/extension.neon
  - vendor/phpstan/phpstan-deprecation-rules/rules.neon
  - phpstan-rules/phpstan-extension.neon
  - vendor/spaze/phpstan-disallowed-calls/extension.neon
  - vendor/spaze/phpstan-disallowed-calls/disallowed-dangerous-calls.neon
  - vendor/spaze/phpstan-disallowed-calls/disallowed-insecure-calls.neon
parameters:
  level: 6
  reportUnmatchedIgnoredErrors: false
  treatPhpDocTypesAsCertain: false
  disallowedFunctionCalls:
    -
      function: 'exec()'
      message: 'use Symfony Process instead'
      allowIn:
        - robo-components/*
        - RoboFile.php
    -
      function: 'passthru()'
      message: 'use Symfony Process instead'
      allowIn:
        - robo-components/*
        - RoboFile.php
    -
      function: 'proc_open()'
      message: 'use Symfony Process instead'
      allowIn:
        - robo-components/*
        - RoboFile.php
    -
      function: 'shell_exec()'
      message: 'use Symfony Process instead'
      allowIn:
        - robo-components/*
        - RoboFile.php
    -
      function: 'system()'
      message: 'use Symfony Process instead'
      allowIn:
        - robo-components/*
        - RoboFile.php
    -
      function: 'popen()'
      message: 'use Symfony Process instead'
      allowIn:
        - robo-components/*
        - RoboFile.php
    -
      function: 'print_r()'
      message: 'use some logger instead'
      allowParamsAnywhere:
        2: true
    -
      function: 'in_array()'
      message: 'set the third parameter $strict to `true` to also check the types to prevent type juggling bugs'
      allowParamsAnywhere:
        3: true
  scanFiles:
    - web/core/modules/update/update.compare.inc
  ignoreErrors:
    - identifier: missingType.iterableValue
    - identifier: missingType.generics
    - '#has no return type specified.#'
    - '#Access to an undefined property Drupal\\Core\\Field\\FieldItemListInterface::\$value.#'
    - '#Access to an undefined property Drupal\\Core\\Field\\FieldItemInterface::\$value.#'
  paths:
    - web
    - RoboFile.php
    - robo-components
    - phpstan-rules
  excludePaths:
    - '*.api.php'
    - '*/tests/fixtures/*.php'
    - 'web/core/*'
    - 'web/sites/default/files/*'
    - 'web/sites/default/*.php'
    - 'web/sites/default/default.settings.php'
    - 'web/sites/default/settings.php (?)'
    - 'web/sites/default/settings.local.php (?)'
    - 'web/modules/contrib/*'
    - 'web/themes/contrib/*'
    - 'web/libraries/*'
    - 'web/sites/simpletest/*'
