{#
We use grid and row/col start to position both the image and the text on
the same cell.
#}
<div class="grid grid-rows-1">
  <figure class="row-start-1 col-start-1 child-object-cover w-full overflow-hidden">
    {{ image }}
  </figure>

  {% if credit %}
    <div class="row-start-1 col-start-1 self-end text-xs absolute bg-white opacity-70 p-2">
      {{ credit }}
    </div>
  {% endif %}
</div>
