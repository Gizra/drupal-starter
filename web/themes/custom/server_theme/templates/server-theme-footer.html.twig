{% macro socialMedia(name, url) %}
  <a href="{{ url }}" target="_blank" title="{% trans %}Share on {{ name }}{% endtrans %}">
    <i class="fa fa-lg fa-{{ name }}"></i>
  </a>
{% endmacro %}

{% macro internalLink(name, url) %}
  <a href="{{ url }}" class="font-bold">
    {{ name }}
  </a>
{% endmacro %}

