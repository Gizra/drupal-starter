<div class="accordion-item group flex flex-col gap-4 py-4">
  {% set accordion_item_id = 'accordion-description-' ~ random() %}
  <button type="button" aria-controls="{{ accordion_item_id }}" aria-expanded="false" class="font-semibold grid grid-cols-[1fr_auto] gap-4 text-start w-full items-start">
    <span class="row-start-1 col-start-1">
      {{ title }}
    </span>

    {# Close #}
    {# Heroicons: minus (mini) #}
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 is-revealed-when-expanded row-start-1 col-start-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15" />
    </svg>

    {# Open #}
    {# Heroicons: plus (mini) #}
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 is-hidden-when-expanded row-start-1 col-start-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
    </svg>
  </button>

  <div id="{{ accordion_item_id }}" class="accordion-description hidden w-full">{{ description }}</div>
</div>
