{#
/**
 * @file
 * Template for a person card.
 *
 * Available variables:
 * - avatar: URL of the person's avatar image
 * - name: Person's full name
 * - role: Person's job title/role
 * - badge: Status badge text
 */
#}
{{ attach_library('server_theme/person-card') }}
{{ attach_library('server_theme/inter-font') }}
<div class="person-card">
  <div class="person-card__content">
    <!-- Avatar -->
    <img src="{{ avatar }}" alt="{{ name }}" class="person-card__avatar" />
    
    <!-- Text Content -->
    <div class="person-card__text">
      <div class="person-card__name">{{ name }}</div>
      <div class="person-card__role">{{ role }}</div>
      <div class="person-card__badge">{{ badge }}</div>
    </div>
  </div>
  
  <!-- Action Buttons -->
  <div class="person-card__actions">
    <!-- Email -->
    <div class="person-card__action person-card__action--left">
      <svg class="person-card__icon person-card__icon--email" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26c.3.16.67.16.97 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      <span class="person-card__action-text">Email</span>
    </div>
    
    <!-- Divider -->
    <div class="person-card__divider"></div>
    
    <!-- Call -->
    <div class="person-card__action person-card__action--right">
      <svg class="person-card__icon person-card__icon--phone" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
      <span class="person-card__action-text">Call</span>
    </div>
  </div>
</div>