<div class="container-wide flex flex-col gap-y-5">

  <div class="flex flex-row justify-between">

    <a href="{{ path('<front>') }}" rel="home" class="flex gap-x-2 items-center">
      <img class="h-16 w-16" src="/{{ directory }}/dist/images/logo.svg" alt="{{ site_name }}">
    </a>

    <div>
      <div class="language-block-dropdown block lg:hidden">{{ language_block_dropdown }}</div>
      <div class="language-block-links hidden lg:block">{{ language_block_links }}</div>
    </div>
  </div>

  <div class="flex justify-between">


    {{ menu }}

    {{ search_block }}
    

    {# The hamburger icon and menu that would appear on mobile devices #}
    <div class="flex">
      <button class="block lg:hidden w-7">
        <img src="/{{ directory }}/dist/images/menu.svg" alt="{{ 'Menu'|t }}">
      </button>
    </div>


  </div>


</div>
