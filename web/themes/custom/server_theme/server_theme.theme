  $info['server_theme_container_rounded_corners_big'] = [
    'variables' => [
      'items' => [],
    ],
  ];

  // Wrap with `full` rounded corners.
  $info['server_theme_container_rounded_corners_full'] = [
    'variables' => [
      'items' => [],
    ],
  ];

  // Wrap with a max width container.
  $info['server_theme_container_max_width'] = [
    'variables' => [
      'element' => [],
      'width' => NULL,
