// Apply standard letter-spacing sitewide.
body,
input,
select,
textarea,
button,
legend,
label {
  @apply tracking-normal;
}

// Apply standard text-color.
body {
  @apply text-gray-900;
}

// Remove the top/ bottom margin from the first/ last element of a prose.
.prose .text-formatted > :first-child {
  @apply mt-0;
}

.prose .text-formatted > :last-child {
  @apply mb-0;
}

.prose .text-formatted figure,
.prose .text-formatted img {
  @apply my-0;
}
